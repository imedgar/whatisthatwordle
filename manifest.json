{
  "name": "Wordle Meaning",
  "version": "0.1",
  "description": "Search Wordle of the day meaning",
  "manifest_version": 3,
  "author": "github.com/imedgar",
  "action": {
    "default_popup": "index.html",
    "default_title": "Wordle Meaning"
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.nytimes.com/games/wordle/index.html"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "512": "assets/help.png"
  }
}
