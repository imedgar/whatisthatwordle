{
  "name": "What Does That Wordle Mean",
  "version": "0.1",
  "description": "Search what the Wordle of the day means",
  "manifest_version": 3,
  "author": "github.com/imedgar",
  "action": {
    "default_popup": "index.html",
    "default_title": "What Does That Wordle Mean"
  },
  "permissions": [
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.nytimes.com/games/wordle/index.html"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "512": "help.png"
  }
}
